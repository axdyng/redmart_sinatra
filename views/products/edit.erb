<h4>Editing product: <%= @product[:name] %></h4>

<form action="/products/<%= @product[:id] %>" method="post">
  <input type="hidden" name="_method" value="put">
  <!-- 1st row -->
  <div class="row">

    <div class="two columns">
      <label for="productname">Product:</label>
      <input id="productname" type="text" name="product[name]" value="<%= @product[:name] %>">
    </div>

    <div class="two columns">
      <label for="price">Price(SGD):</label>
      <input id="price" type="number" min="0" step="0.1" name="product[price]" value="<%= @product[:price] %>">
    </div>

  </div>

  <div class="row">
    <div class="four columns">
      <label for="imgURL">Image URL:</label>
      <input id="imgURL" type="url" class="u-full-width" name="product[url]" value="<%= @product[:url] %>">
    </div>
  </div>

  <div class="row">
    <div class="four columns">
      <label for="desc">Description:</label>
      <textarea id="desc" class="u-full-width" name="product[description]"><%= @product[:description] %></textarea>
    </div>
  </div>

  <input type="submit" class="button-primary" value="Update">

</form>
